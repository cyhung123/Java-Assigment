    public Assign_Lecturer() {
        initComponents();
        
        Name_Leader.setEditable(false); // Make the text field non-editable
        Lecturer_Name.setEditable(false); // Make the text field non-editable
        
        initializeTableModel(); // Initialize the table model
        loadDataFromFile(); // Load data into the table
        loadDataToArray(); // Load data into the Array list
        populateLeaderBox(); // Populate the LeaderBox with Academic Leaders
        populateLecturerBox(); //Populate the LeaderBox with Lecturer
        LeaderBox.addActionListener(evt -> updateLeaderName());
        LecturerBox.addActionListener(evt -> updateLecturerName());
    }
    
    private void initializeTableModel() {
         //@Abstraction
        model = new DefaultTableModel(new Object[]{"AssignID", "AcademicLeaderID", "LecturerID"}, 0);
        jTable1.setModel(model); // Set the model to the JTable
    }
    
     public void loadDataFromFile() {
    // Clear the existing data in the model before loading new data
    model.setRowCount(0);
    
    try (BufferedReader br = new BufferedReader(new FileReader("Assign.txt"))) {
        String line;
        while ((line = br.readLine()) != null) {
            // Split the line by commas
            String[] parts = line.split(","); // Adjusted split to remove space
            if (parts.length == 3) { // Check for exactly 3 parts
                String AssignId = parts[0].trim(); // AssignID
                String AcademicLeaderID = parts[1].trim(); // AcademicLeaderID
                String LecturerID = parts[2].trim(); // LecturerID                  

                String[] newData = {AssignId, AcademicLeaderID, LecturerID};
                model.addRow(newData);
            } else {
                // Optional: Handle lines with incorrect format
                System.err.println("Skipping invalid line: " + line);
            }
        }
    } catch (FileNotFoundException e) {
        JOptionPane.showMessageDialog(this, "Registration.txt file not found.", "Error", JOptionPane.ERROR_MESSAGE);
    } catch (IOException e) {
        e.printStackTrace();
        JOptionPane.showMessageDialog(this, "Error reading the data file.", "Error", JOptionPane.ERROR_MESSAGE);
    }
    
}
     
    public void loadDataToArray() {
          
       fullTable.clear(); // Clear previous data in fullTable    
        try (BufferedReader br = new BufferedReader(new FileReader("Registration.txt"))) {
            String line;
            while ((line = br.readLine()) != null) {
                // Split the line by commas
                String[] parts = line.split(","); // Adjusted split to remove space
                if (parts.length == 5) { // Check for exactly 5 parts
                    String userId = parts[0].trim(); // UserID
                    String userName = parts[1].trim(); // Username
                    String password = parts[2].trim(); // Password
                    String email = parts[3].trim(); // Email
                    String role = parts[4].trim(); // Role                    

                    String[] newData = {userId, userName, password, email, role};
                    fullTable.add(parts); // Add to fullTable after adding to model
                } else {
                    // Optional: Handle lines with incorrect format
                    System.err.println("Skipping invalid line: " + line);
                }
            }
        } catch (FileNotFoundException e) {
            JOptionPane.showMessageDialog(this, "Registration.txt file not found.", "Error", JOptionPane.ERROR_MESSAGE);
        } catch (IOException e) {
            e.printStackTrace();
            JOptionPane.showMessageDialog(this, "Error reading the data file.", "Error", JOptionPane.ERROR_MESSAGE);
        }    
}
    
    private void populateLeaderBox() {
        LeaderBox.removeAllItems(); // Clear existing items
        for (String[] user : fullTable) {
            if (user[4].equalsIgnoreCase("Academic Leader")) { // Check if the role is Academic Leader
                LeaderBox.addItem(user[0]); // Add the user ID to the combo box
            }
        }
        LeaderBox.setSelectedIndex(-1); // Deselect any selected item
    }
    
    
    
   private void populateLecturerBox() {
    LecturerBox.removeAllItems(); // Clear existing items
    for (String[] user : fullTable) {
        if (user[4].equalsIgnoreCase("Lecturer")) { // Check if the role is Lecturer
            LecturerBox.addItem(user[0]); // Add the user ID to the combo box
        }
    }
    LecturerBox.setSelectedIndex(-1); // Deselect any selected item
}
   
   private void updateLeaderName() {
        String selectedUserId = (String) LeaderBox.getSelectedItem();
        if (selectedUserId != null) {
            for (String[] user : fullTable) {
                if (user[0].equals(selectedUserId)) { // Match user ID
                    Name_Leader.setText(user[1]); // Set the name in the text field
                    break;
                }
            }
        } else {
            Name_Leader.setText(""); // Clear the text field if no selection
        }
    }
   
   private void updateLecturerName() {
        String selectedUserId = (String) LecturerBox.getSelectedItem();
        if (selectedUserId != null) {
            for (String[] user : fullTable) {
                if (user[0].equals(selectedUserId)) { // Match user ID
                    Lecturer_Name.setText(user[1]); // Set the name in the text field
                    break;
                }
            }
        } else {
            Lecturer_Name.setText(""); // Clear the text field if no selection
        }
    }
   
   private boolean isInputValid() {
    String leaderName = Name_Leader.getText().trim();
    String lecturerName = Lecturer_Name.getText().trim();
    String selectedLeader = (String) LeaderBox.getSelectedItem();
    String selectedLecturer = (String) LecturerBox.getSelectedItem();

    // Check if any field is empty
    if (leaderName.isEmpty() || lecturerName.isEmpty()) {
        JOptionPane.showMessageDialog(this, "All fields must be filled.", "Input Error", JOptionPane.WARNING_MESSAGE);
        return false;
    }

    // Check if combo boxes have a selection
    if (selectedLeader == null || selectedLecturer == null) {
        JOptionPane.showMessageDialog(this, "Please select both a leader and a lecturer.", "Input Error", JOptionPane.WARNING_MESSAGE);
        return false;
    }

    return true; // Input is valid
}
   
private void addDataToFile() {
    // Retrieve selected IDs from the combo boxes
    String leaderID = (String) LeaderBox.getSelectedItem();
    String lecturerID = (String) LecturerBox.getSelectedItem();

    // Validate input fields
    if (!isInputValid()) {
        return; // Exit if validation fails
    }

    // Generate a new unique AssignID
    String assignID = generateNewAssignID();

    // Check for duplicates
    if (isDuplicateEntry(leaderID, lecturerID)) {
        JOptionPane.showMessageDialog(this, "This assignment already exists for the selected Leader and Lecturer.", "Duplicate Entry", JOptionPane.WARNING_MESSAGE);
        return; // Exit if duplicate found
    }

    // Write the new data to the file
    try (BufferedWriter bw = new BufferedWriter(new FileWriter("Assign.txt", true))) {
        String newLine = assignID + "," + leaderID + "," + lecturerID;
        bw.write(newLine);
        bw.newLine(); // Add a new line after writing the entry
        bw.flush(); // Ensure all data is written to the file
    } catch (IOException e) {
        JOptionPane.showMessageDialog(this, "Error writing to the data file.", "Error", JOptionPane.ERROR_MESSAGE);
    }

    // Reload the data from the file to refresh the table
    loadDataFromFile();
    LeaderBox.setSelectedIndex(-1);
    LecturerBox.setSelectedIndex(-1);  
}

private String generateNewAssignID() {
    int newID = 1; // Start with 1

    try (BufferedReader br = new BufferedReader(new FileReader("Assign.txt"))) {
        String line;
        while ((line = br.readLine()) != null) {
            String[] parts = line.split(","); // Split the line by commas
            if (parts.length > 0) {
                String existingID = parts[0].trim(); // Get the existing ID
                if (existingID.startsWith("AS")) {
                    // Extract the numeric part and parse it
                    String numberPart = existingID.substring(2); // Remove "AS"
                    try {
                        int existingIDValue = Integer.parseInt(numberPart); // Parse the number
                        if (existingIDValue >= newID) {
                            newID = existingIDValue + 1; // Increment to the next available ID
                        }
                    } catch (NumberFormatException e) {
                        // Handle the case where parsing fails (ignore or log)
                    }
                }
            }
        }
    } catch (FileNotFoundException e) {
        // If the file is not found, start from 1
        System.out.println("Assign.txt file not found. Starting with AS1.");
    } catch (IOException e) {
        e.printStackTrace();
        JOptionPane.showMessageDialog(this, "Error reading the data file.", "Error", JOptionPane.ERROR_MESSAGE);
    }

    return "AS" + newID; // Return the new AssignID
}

private boolean isDuplicateEntry(String leaderID, String lecturerID) {
    try (BufferedReader br = new BufferedReader(new FileReader("Assign.txt"))) {
        String line;
        while ((line = br.readLine()) != null) {
            String[] parts = line.split(","); // Split the line by commas
            if (parts.length == 3) {
                String existingLeaderID = parts[1].trim();
                String existingLecturerID = parts[2].trim();

                // Check if both LeaderID and LecturerID match
                if (existingLeaderID.equals(leaderID) && existingLecturerID.equals(lecturerID)) {
                    return true; // Duplicate found
                }
            }
        }
    } catch (FileNotFoundException e) {
        JOptionPane.showMessageDialog(this, "Assign.txt file not found.", "Error", JOptionPane.ERROR_MESSAGE);
    } catch (IOException e) {
        e.printStackTrace();
        JOptionPane.showMessageDialog(this, "Error reading the data file.", "Error", JOptionPane.ERROR_MESSAGE);
    }
    return false; // No duplicates found
}
   


