    private void jTable1MouseReleased(java.awt.event.MouseEvent evt) {                                      
        // TODO add your handling code here:
         int row = jTable1.getSelectedRow();

    // Check if a row is selected
    if (row != -1) {
        // Retrieve data from the selected row
        String LeaderID = String.valueOf(model.getValueAt(row, 1)); // Correct index for Name
        String LecturerID = String.valueOf(model.getValueAt(row, 2)); // Correct index for Password
        

        // Set the retrieved values in the respective text fields          
        LeaderBox.setSelectedItem(LeaderID);
        LecturerBox.setSelectedItem(LecturerID);
    } else {
        // Optionally clear the fields if no row is selected
        LeaderBox.setSelectedIndex(-1);
        LecturerBox.setSelectedIndex(-1);       
    }
    }                                     

